{
    "format_version": 2,
    "epochs": 100,
    "save_epoch": 10,
    "reg_type": "BraTS2021_Training_Data_png_T256_selected_AREA_UP_23000_Alt_300slices_70_15_15_FL_L1",

    "executors": [
        {
            "tasks": [
                "train",
                "submit_model",
                "validate"
            ],
            "executor": {
                "id": "Executor",
                "path": "nvflare.app_common.executors.learner_executor.LearnerExecutor",
                "args": {
                    "learner_id": "fed_learner"
                }
            }
        }
    ],
    "task_result_filters": [
    ],
    "task_data_filters": [
    ],
    "components": [
        {
            "id": "fed_learner",
            "path": "fed_learner.FedLearner",
            "args": {
                "lr": 1e-4,
                "epochs": "{epochs}",
                "batch_size": 1,
                "image_size": 256,
                "num_contrast": 4,
                "num_filter": 32,
                "num_res_block": 9,
                "lambda_ssim": 1,
                "lambda_vgg": 1e-2,
                "path_logs": "logs/",
                "path_model": "/projects/I20240003/alicia.oliveira/moana-fl-fedopt-t1/",
                "path_data": "/projects/I20240003/alicia.oliveira/Data/",
                "path_weight": "weight/",
                "path_saved_models": "saved_models",
                "reg_type": "{reg_type}",
                "save_epoch": "{save_epoch}",
                "path_training_time": "/projects/I20240003/alicia.oliveira/moana-fl-fedopt-t1/training_time.txt",
                "path_loss_plot": "loss_plots/",
                "path_accuracy_plot": "accuracy_plots/"
            }
        }
    ]
}
